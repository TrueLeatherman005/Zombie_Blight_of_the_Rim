<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <!-- Фракция зомби Порчи -->
  <FactionDef>
    <defName>BlightSwarmFaction</defName>
    <label>blight swarm</label>
    <description>A horde of blight-infected creatures that have succumbed to the zombie-like state. They exist only to spread the infection and hunt for living flesh.</description>
    <pawnsPlural>blight zombies</pawnsPlural>
    <categoryTag>Tribal</categoryTag>
    <settlementGenerationWeight>0</settlementGenerationWeight>
    <requiredCountAtGameStart>0</requiredCountAtGameStart>
    <maxCountAtGameStart>0</maxCountAtGameStart>
    <canMakeRandomly>false</canMakeRandomly>
    <raidCommonalityFromPointsCurve>
      <points>
        <li>(0, 0)</li>
      </points>
    </raidCommonalityFromPointsCurve>
    <humanlikeFaction>true</humanlikeFaction>
    <hidden>true</hidden>
    <hostileToFactionlessHumanlikes>true</hostileToFactionlessHumanlikes>
    <autoFlee>false</autoFlee>
    <canUseAvoidGrid>true</canUseAvoidGrid>
    <techLevel>Animal</techLevel>
    <canSiege>false</canSiege>
    <canStageAttacks>false</canStageAttacks>
    <chatColor>(158, 153, 135)</chatColor>
    <permanentEnemyToEveryoneExcept>
      <li>BlightSwarmFaction</li>
    </permanentEnemyToEveryoneExcept>
    <raidLootMaker>TribbalRaidLootMaker</raidLootMaker>
    <startingGoodwill>
      <min>-100</min>
      <max>-100</max>
    </startingGoodwill>
    <mustStartOneEnemy>false</mustStartOneEnemy>
    <naturalColonyGoodwill>
      <min>-100</min>
      <max>-100</max>
    </naturalColonyGoodwill>
    <allowedArrivalTemperatureRange>
      <min>-100</min>
      <max>100</max>
    </allowedArrivalTemperatureRange>
    <pawnGroupMakers>
      <li>
        <kindDef>Combat</kindDef>
        <commonality>100</commonality>
        <options>
          <!-- Динамически наполняется через C#-код: все животные, все humanlike, все модовые существа -->
        </options>
      </li>
    </pawnGroupMakers>
  </FactionDef>
</Defs>
