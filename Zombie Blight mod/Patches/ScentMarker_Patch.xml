<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <!-- Add scent marker to all living creatures -->
  <Operation Class="PatchOperationAdd">
    <xpath>/Defs/ThingDef[@Name="BasePawn"]/comps</xpath>
    <value>
      <li Class="ZombieBlight.CompProperties_ScentMarker">
        <baseStrength>1.0</baseStrength>
        <updateInterval>60</updateInterval>
      </li>
    </value>
  </Operation>
</Patch>